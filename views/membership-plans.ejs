<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: 'Membership plans · Link234' }) %>
    <link rel="stylesheet" href="/vendor/gridjs/theme/mermaid.min.css" />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800">
    <!-- Header -->
    <%- include('partials/accHeader') %>

    <main class="mx-auto w-full max-w-[1500px] pb-[80px] px-4 py-6">
      <% if (typeof error !== 'undefined') { %>
      <div
        class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700"
      >
        <%= error %>
      </div>
      <% } %>

      <div class="flex items-center justify-between mb-8">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white">
          Membership Plans
        </h3>
      </div>

      <% if (allPlans && allPlans.length) { %>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% allPlans.forEach(plan => { %>
        <div
          class="group border border-gray-200 dark:border-gray-700 rounded-2xl hover:shadow-lg transition-all bg-white dark:bg-gray-900 overflow-hidden"
        >
          <!-- Header -->
          <div
            class="bg-gradient-to-r from-gray-100 to-gray-200 text-gray-600 px-6 py-4"
          >
            <div class="flex items-center justify-between gap-3">
              <div>
                <h2 class="text-xl font-semibold"><%= plan.displayName %></h2>
                <p class="text-sm opacity-90"><%= plan.durationDays %> days</p>
              </div>

              <% const active = plan.isActive !== false; %> <% if (active) { %>
              <span
                class="py-1 px-2 inline-flex items-center gap-x-1 text-xs font-medium bg-teal-700 text-teal-100 rounded-full dark:bg-teal-500/10 dark:text-teal-500"
              >
                <!-- check icon -->
                <svg
                  class="shrink-0 w-3 h-3"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M9 12l2 2 4-4"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    fill="none"
                  />
                </svg>
                Active
              </span>
              <% } else { %>
              <span
                class="py-1 px-2 inline-flex items-center gap-x-1 text-xs font-medium bg-rose-100 text-rose-800 rounded-full dark:bg-rose-500/10 dark:text-rose-500"
              >
                <!-- x icon -->
                <svg
                  class="shrink-0 w-3 h-3"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M15 9l-6 6M9 9l6 6"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    fill="none"
                  />
                </svg>
                Inactive
              </span>
              <% } %>
            </div>
          </div>

          <!-- Body -->
          <div class="p-6 space-y-5">
            <!-- Features -->
            <div>
              <h3
                class="text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2"
              >
                Features
              </h3>
              <ul class="space-y-1">
                <% plan.features.forEach(f => { %>
                <li
                  class="flex items-center gap-2 text-gray-600 dark:text-gray-300"
                >
                  <svg
                    class="w-4 h-4 text-green-500 shrink-0"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <%= f %>
                </li>
                <% }) %>
              </ul>
            </div>

            <!-- PriceBook -->
            <!-- PriceBook -->
            <% if (plan.priceBook && plan.priceBook.length) { %>
            <div class="border-t border-gray-100 dark:border-gray-700 pt-4">
              <h3
                class="text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2"
              >
                Pricing
              </h3>
              <ul class="space-y-2">
                <% plan.priceBook.forEach(p => { %> <% const active = p.isActive
                !== false; %>
                <li
                  class="flex justify-between items-center text-sm bg-gray-50 dark:bg-gray-800 px-3 py-2 rounded-md <%= active ? '' : 'opacity-50 line-through' %>"
                >
                  <span class="font-medium text-gray-700 dark:text-gray-200">
                    <%= p.currency || "—" %>
                  </span>
                  <span class="text-gray-600 dark:text-gray-300">
                    <%= (p.amountMinor ? (p.amountMinor / 100).toFixed(2) : "—")
                    %>
                  </span>
                  <% if (p.region) { %>
                  <span class="text-xs text-gray-400 dark:text-gray-500">
                    <%= p.region %>
                  </span>
                  <% } %>
                </li>
                <% }) %>
              </ul>
            </div>
            <% } %>

            <!-- Notes -->
            <% if (plan.notes) { %>
            <p class="text-xs text-gray-500 dark:text-gray-400 italic">
              <%= plan.notes %>
            </p>
            <% } %>
          </div>

          <!-- Footer -->
          <div class="hidden px-6 pb-6">
            <button
              class="w-full py-2.5 px-4 rounded-lg bg-blue-700 hover:bg-blue-600 text-white font-medium text-sm transition"
            >
              Edit <%= plan.displayName %> plan
            </button>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="text-center text-gray-500 py-10">
        <p>No plans available yet.</p>
      </div>
      <% } %>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script src="/public/js/axios.min.js"></script>
    <script src="/public/js/app.js"></script>
  </body>
</html>
