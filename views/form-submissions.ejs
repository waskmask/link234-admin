<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title }) %>
    <link rel="stylesheet" href="/vendor/gridjs/theme/mermaid.min.css" />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800">
    <%- include('partials/accHeader') %>

    <main class="mx-auto w-full max-w-[1400px] px-4 py-6">
      <% if (typeof error !== 'undefined') { %>
      <div
        class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-700"
      >
        <%= error %>
      </div>
      <% } %>

      <div class="flex items-center gap-3 mb-5">
        <h1 class="text-2xl font-semibold">Form Submissions</h1>
      </div>

      <div id="grid"></div>
    </main>

    <!-- FORM SUBMISSION MODAL -->
    <div
      id="submissionModal"
      class="hs-overlay hidden fixed inset-0 z-[999] overflow-y-auto overflow-x-hidden"
      role="dialog"
      aria-labelledby="submissionModalLabel"
      tabindex="-1"
      style="background-color: #155dfc47"
    >
      <div
        class="hs-overlay-animation-target hs-overlay-open:scale-100 hs-overlay-open:opacity-100 scale-95 opacity-0 transition-all duration-200 ease-in-out sm:max-w-lg sm:w-full m-3 sm:mx-auto min-h-[calc(100%-56px)] flex items-center"
      >
        <div
          class="w-full flex flex-col bg-white border border-gray-200 shadow-2xl rounded-xl pointer-events-auto"
        >
          <div
            class="flex justify-between items-center py-3 px-4 border-b border-gray-200"
          >
            <h3 id="submissionModalLabel" class="font-bold text-gray-800">
              Contact Submission
            </h3>
            <button
              type="button"
              data-hs-overlay="#submissionModal"
              class="size-8 inline-flex justify-center items-center rounded-full bg-gray-100 hover:bg-gray-200"
            >
              <svg
                class="size-4"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </button>
          </div>

          <div class="px-5 py-4 overflow-y-auto">
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-3 text-sm">
              <div>
                <dt class="text-gray-500">Full Name</dt>
                <dd id="m_fullName" class="font-medium">—</dd>
              </div>
              <div>
                <dt class="text-gray-500">Email</dt>
                <dd id="m_email" class="font-medium break-all">—</dd>
              </div>
              <div>
                <dt class="text-gray-500">Phone</dt>
                <dd id="m_phone" class="font-medium">—</dd>
              </div>
              <div>
                <dt class="text-gray-500">Country</dt>
                <dd id="m_country" class="font-medium">—</dd>
              </div>
              <div class="sm:col-span-2">
                <dt class="text-gray-500">Message</dt>
                <dd id="m_message" class="font-medium whitespace-pre-wrap">
                  —
                </dd>
              </div>
              <div class="sm:col-span-2">
                <dt class="text-gray-500">Submitted At</dt>
                <dd id="m_created" class="font-medium">—</dd>
              </div>
            </dl>
          </div>

          <div class="px-5 py-3 border-t text-right">
            <button
              type="button"
              data-hs-overlay="#submissionModal"
              class="py-2 px-3 inline-flex items-center text-sm font-medium rounded-lg border hover:bg-gray-50"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
    <script src="/public/js/axios.min.js"></script>
    <script src="/vendor/gridjs/gridjs.umd.js"></script>
    <!-- Preline should be in head; if not, include here before your script -->
    <script src="/public/js/form-submissions.js"></script>
  </body>
</html>
